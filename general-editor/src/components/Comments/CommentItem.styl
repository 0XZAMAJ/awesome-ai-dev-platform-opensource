@keyframes pulse {
  0% {
    transform scale(1)
  }
  50% {
    transform scale(0.5)
  }
}

.comment-item
  --comment-item-border rgba(255,255,255,.2)
  --comment-item-color rgba(255,255,255,.1)
  --comment-item-padding 8px
  --comment-item-spacing 8px
  --comment-item-content-font-size 14px
  --comment-item-content-line-height 20px
  --comment-item-content-letter-spacing 0
  --comment-item-avatar-size 24px
  --comment-item-name-color #000
  --comment-item-content-color #000
  --comment-item-color-resolved rgb(230 255 239)
  --comment-item-content-color-resolved #000
  --comment-item-icon-color-resolved #127b26

  padding var(--comment-item-padding)
  color var(--comment-item-content-color)
  margin-top var(--comment-item-spacing)
  border solid 1px var(--comment-item-border)
  background-color var(--comment-item-color)
  border-radius 6px

  &_resolved
    background-color var(--comment-item-color-resolved)

  & > * + * {
    margin-top var(--comment-item-padding);
  }

  &__userpic
    width var(--comment-item-avatar-size)
    height var(--comment-item-avatar-size)

  &__name
    color var(--comment-item-name-color)
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    flex 1
    font-weight 700

  &__name
    font-size 12px

  &__name,
  &__date
    font-size var(--comment-item-content-font-size)

  &__date
    opacity .5
    font-size 11px
    margin-top .5rem

  &__saving
    &_hide
      display none

  &__dot
    width 10px
    height 10px
    margin-right 4px
    display inline-block
    background-color rgba(#000, 0.4)
    border-radius 100%
    will-change color, opacity
    transition color 0.1s ease, opacity 0.1s ease
    animation pulse 1s linear infinite

  &__resolved
    opacity 0
    transition opacity 0.3s ease
    will-change opacity
    height 16px

    ~/_resolved &
      opacity 1
      width 12px
      color var(--comment-item-icon-color-resolved) !important

  &__content
    width 100%
    //display flex
    //gap 8px
    //align-items flex-start


  &__actions
    .button_size_small
      flex-shrink 0
      padding 0 !important
      width 32px !important
      height 32px !important

      &:hover
        background-color rgba(255,255,255,.1)

    .button__icon
      padding 0 !important
      width 20px !important
      height 20px !important

    svg
      width 16px !important
      height 16px !important

  &__text
    flex 1
    white-space pre-wrap
    word-break break-word
    font-size var(--comment-item-content-font-size)
    line-height var(--comment-item-content-line-height)
    letter-spacing var(--comment-item-content-letter-spacing)
    margin-top 8px

    ~/_resolved &
      color var(--comment-item-content-color-resolved)

  &__question
    padding 0
  
  &__controls
    display flex
    justify-content space-between
    padding var(--comment-item-padding)


