.annotations-list
  min-width 264px
  box-sizing border-box
  position relative

  &__draft
    border-bottom 1px solid rgba(#fff,0.1)

  &__list
    top calc(100% - 1px)
    left -1px
    right -1px
    position absolute
    background-color var(--main-bg-color)
    box-shadow 0px 0px 1px rgba(#000, 0.1), 0px 2px 8px -2px rgba(#000, 0.1), 0 0 0 1px rgba(0, 0, 0, 0.1) inset

  &__create
    border-bottom: 1px solid rgba(#fff,0.1);

  &__create,
  &__entity
    height 48px
    display flex
    padding 0 16px
    align-items center
    cursor pointer

    &:hover
      background-color rgba(#fff, .1)

  &__entity
    &_selected
      pointer-events none
      background-color rgba(#fff, .15)

  &__user
    font-size 14px
    line-height 16px
    width 136px
    display flex

  &__icons
    display flex
    justify-content flex-end
    align-items center

  &__icon-column
    display flex
    align-items center
    justify-content center
    &:nth-child(2)
      width: 32px
      height: 32px

  &__name
    flex 1
    white-space nowrap
    text-overflow ellipsis
    overflow hidden

  &__entity-id
    font-size 11px
    opacity 0.5
    flex none
    padding-left 5px

  &__review
    font-size 11px
    line-height 13px

    &_state
      &_accepted
        color #68e83b
      &_fixed
        color #f59e42
      &_rejected
        color #ff3333

  &__created
    font-size 11px
    line-height 13px
    color var(--main-color-primary)

  &__date
    color var(--main-color-primary)

  &__counter
    font-size 11px
    line-height 13px
    color var(--main-color-primary)

  &__toggle
    width 32px
    height 32px
    position relative

    &::before
      top 50%
      left 50%
      content ''
      width 10px
      height 10px
      display block
      position absolute
      border 2px solid var(--main-color-primary)
      border-bottom none
      border-right none
      margin-top -3px
      transform translate3d(-50%, -50%, 0) rotate(225deg)

    &_opened::before
      margin-top 3px
      transform translate3d(-50%, -50%, 0) rotate(45deg)
