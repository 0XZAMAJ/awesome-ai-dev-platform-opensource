.seeker
  width 100%
  height 24px
  position relative

  &__track
    width 100%
    height 100%
    //background -moz-linear-gradient(top, rgba(0,0,0,0.65) 0%, rgba(0,0,0,0) 75%);
    //background -webkit-linear-gradient(top, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 75%);
    //background linear-gradient(to bottom, rgba(0,0,0,0.65) 0%,rgba(0,0,0,0) 75%);
    background-color #fff
    border-radius: 5px

  &__indicator
    top 0
    left 0
    z-index 1
    width 100px
    height 24px
    max-width 100%
    position absolute
    cursor col-resize
    box-sizing border-box
    opacity .5

    &:hover
      opacity 1

    &::before
      top 1px
      bottom 1px
      left 1px
      right 1px
      content ''
      display block
      position absolute
      border-radius 3px
      background #666
      border solid 1px #fff
      //box-shadow 0px 0px 0px 1px rgba(0, 0, 0, 0.05), 0px 2px 5px rgba(0, 0, 0, 0.2)

  &__position
    top 0
    left 0
    width 10px
    z-index 2
    cursor grab
    height 24px
    position absolute
    background-color var(--main-color-secondary)
    //border-radius 100%

    &::before
      top 0
      bottom 0
      left -5px
      right -5px
      content ''
      display block
      position absolute

    &:hover
      border-color #8b138f

  &__minimap
    top 0
    left 0
    z-index 3
    width 100%
    height 100%
    position absolute
    pointer-events none
