.transcripts
  &__transcript
    height 300px
    overflow-y auto
    resize vertical
    border 1px solid rgba(#000, .1)
    padding 12px
    margin-top 8px
    border-radius 8px
    box-shadow inset 0 0 8px 2px rgba(0, 0, 0, .1)

    &::-webkit-scrollbar
      background-color #fff
      width 16px

    &::-webkit-scrollbar-track
      background-color #fff

    &::-webkit-scrollbar-thumb
      background-color #babac0
      border-radius 16px
      border 4px solid #fff