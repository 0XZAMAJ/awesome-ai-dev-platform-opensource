.questions
  border 1px solid rgba(#000, .1)
  border-radius 8px
  padding 16px 16px 12px 12px
  height 300px
  overflow-y auto
  resize vertical
  display flex
  flex-direction column
  gap 16px
  box-shadow inset 0 0 8px 2px rgba(0, 0, 0, .1)

  &::-webkit-scrollbar
    background-color #fff
    width 16px

  &::-webkit-scrollbar-track
    background-color #fff

  &::-webkit-scrollbar-thumb
    background-color #babac0
    border-radius 16px
    border 4px solid #fff

  .item
    border solid 1px rgba(#000, 0.1)
    background-color rgba(#000, 0.025)
    align-items flex-start
    position relative
    border-radius 8px 0 8px 8px

    &--selected
      box-shadow: 0 0 0 3px rgba(0, 0, 0, 1);

    .split
      display flex

      &:first-child > :first-child
        border-top-left-radius 8px

      &:last-child > :first-child
        border-bottom-left-radius 8px

      &:last-child > :last-child
        border-bottom-right-radius 8px

      .lbl
        font-weight 700
        width 100px
        border-radius 0
        padding-left 8px
        box-sizing border-box

      .value
        flex 1
        border solid 1px rgba(#000, .1) !important
        background-color #fff !important
        padding 8px 12px
        height auto
        min-height auto
        border-radius 0
        outline none
        box-shadow none

    .delete
      position absolute
      top -10px
      right -10px
      padding 8px
      height 24px
      color #fff
      font-weight 700
      border-radius 100%

    .lbl-list
      display flex
      flex-wrap wrap
      padding 8px
      gap 8px
      background-color #fff
      border solid 1px rgba(0,0,0,0.1) !important
      flex 1

  &-actions
    margin-top 8px
    text-align right

    .button
      color #fff
