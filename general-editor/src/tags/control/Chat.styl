.control-chat
  display flex
  flex-direction column
  gap 8px

  &__contentWrapper
    flex 1
    border solid 1px rgba(0,0,0,.1)
    border-radius 8px
    position relative
    background-image linear-gradient(0deg, white 40%, #f8f8f8 100%)

  &__contentInner
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    overflow-y auto

  &__messages
    display flex
    flex-direction column
    justify-content flex-end
    min-height 100%

  &__inputWrapper
    display flex
    gap 8px

    .button
      color white

  &__message
    padding 8px
    max-width 80%
    border solid 1px rgba(0, 0, 0, .1)
    border-radius 8px
    margin 8px auto 8px 8px
    white-space wrap
    background-image linear-gradient(145deg, white 40%, #eee)
    font-size 12px
    box-shadow 2px 2px 4px rgba(0, 0, 0, .1)
    min-width 150px

    &_userMessage
      margin-left auto
      margin-right 8px

    &Icon
      opacity 0
      color black
      cursor pointer
      display inline-block

      & + *
        margin-left 8px

      svg
        width 16px
        height 16px

    &:hover &Icon
      opacity 0.3

      &:hover
        opacity 1

  &__sender
    font-weight 700
    display flex
    align-items center
    justify-content space-between

    &Name
      flex 1

